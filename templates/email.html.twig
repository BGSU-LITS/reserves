<!doctype html>
<html>
    <body>
        <h1 style="margin:0 0 10px 0">Course Reserves Request</h1>
        <h2 style="margin:0 0 10px 0">Courses</h2>
        <table border="0" cellspacing="0" cellpadding="0" style="margin:0 0 1em 0">
            <thead>
                <tr>
                    <th style="padding:0 1em 0 0;text-align:left">
                        Instructor Name
                    </th>
                    <th style="padding:0 1em 0 0;text-align:left">
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                <tr>
                    <td style="padding:0 1em 0 0">
                        {{ instructor.name }}
                    </td>
                    <td style="padding:0 1em 0 0">
                        {{ instructor.email }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <table border="0" cellspacing="0" cellpadding="0" style="margin:0 0 1em 0">
            <thead>
                <tr>
                    <th style="padding:0 1em 0 0;text-align:left">
                        Course Number
                    </th>
                    <th style="padding:0 1em 0 0;text-align:left">
                        Title
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for course in courses %}
                <tr>
                    <td style="padding:0 1em 0 0">
                        {{ course.number }}
                    </td>
                    <td style="padding:0 1em 0 0">
                        {{ course.title }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if reserves %}
        <h2 style="margin:0 0 10px 0">Reserves</h2>
        <table border="0" cellspacing="0" cellpadding="0" style="margin:0 0 1em 0">
            <thead>
                <tr>
                    <th style="padding:0 1em 0 0;text-align:left">
                        Item Title
                    </th>
                    <th style="padding:0 1em 0 0;text-align:left">
                        Author
                    </th>
                    <th style="padding:0 1em 0 0;text-align:left">
                        Call Number
                    </th>
                    <th style="padding:0 1em 0 0;text-align:left">
                        Loan Period
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for reserve in reserves %}
                <tr>
                    <td style="padding:0 1em 0 0">
                        {{ reserve.title }}
                    </td>
                    <td style="padding:0 1em 0 0">
                        {{ reserve.author }}
                    </td>
                    <td style="padding:0 1em 0 0">
                        {{ reserve.number }}
                    </td>
                    <td style="padding:0 1em 0 0">
                        {{ reserve.period }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
        {% if additional %}
        <p style="margin:0 0 1em 0">
            <strong>Additional Information</strong><br>
            {{ additional }}
        </p>
        {% endif %}
        {% if location %}
        <p style="margin:0 0 1em 0">
            <strong>Where should these items be placed on reserve?</strong><br>
            {{ locations[location] }}
        </p>
        {% endif %}
        {% if terms %}
        <p style="margin:0 0 1em 0">
            <strong>Terms Needed</strong><br>
            {{ terms|join(', ') }}
        </p>
        {% endif %}
        {% if date_begin %}
        <p style="margin:0 0 1em 0">
            <strong>Begin Date</strong><br>
            {{ date_begin }}
        </p>
        {% endif %}
        {% if date_end %}
        <p style="margin:0 0 1em 0">
            <strong>End Date</strong><br>
            {{ date_end }}
        </p>
        {% endif %}
        {% if email %}
        <p style="margin:0 0 1em 0">
            <strong>Confirmation Email</strong><br>
            {{ email }}
        </p>
        <p style="border-top:1px solid black;padding:1em 0">
            {{ instructions }}
        </p>
        {% endif %}
    </body>
</html>
